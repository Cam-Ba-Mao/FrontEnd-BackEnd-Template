    section.pennacademy-contact
        .container
            .pennacademy-contact__form 
                h2.pennacademy-contact__form--title Đăng ký test trình độ và tư vấn miễn phí
                .pennacademy-contact__form--content 
                    .wpforms-container.wpforms-container-full
                        form(action="./styleguide.html" class="wpforms-validate wpforms-form wpforms-ajax-form")
                            .wpforms-field-container
                                +wpf-input("wpf-input-2", "Họ tên phụ huynh *", "Họ tên phụ huynh *", "Validation message")
                                +wpf-input("wpf-input-3", "Số điện thoại *", "Số điện thoại *")
                                +wpf-input("wpf-input-5", "Email", "Email")
                                +wpf-select("Chương trình quan tâm *", "Chương trình quan tâm", "Option 1", "Option 2", "Option 3")
                                +v-textarea("Nội dung", "Nội dung")
                                
                            .wpforms-submit-container
                                button(type="submit" class="wpforms-submit" data-alt-text="Sending..." data-submit-text="Submit") GỬI THÔNG TIN
